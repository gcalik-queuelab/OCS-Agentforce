<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Country_mandatory</fullName>
    <active>true</active>
    <description>AD-121 to ensure Country is populated on a User</description>
    <errorConditionFormula>AND(!$Setup.OCS_Config_Settings_CSH__c.Validation_Rules_Disabled__c,ISBLANK(Country))</errorConditionFormula>
    <errorDisplayField>Country</errorDisplayField>
    <errorMessage>Please provide a Country</errorMessage>
</ValidationRule>
