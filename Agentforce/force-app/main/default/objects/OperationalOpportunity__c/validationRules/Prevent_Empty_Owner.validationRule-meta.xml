<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Empty_Owner</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    !$Setup.OCS_Config_Settings_CSH__c.Validation_Rules_Disabled__c,
    ISBLANK(Owner__c)
)</errorConditionFormula>
    <errorDisplayField>Owner__c</errorDisplayField>
    <errorMessage>The Owner must be assigned</errorMessage>
</ValidationRule>
