<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_Detail_Required</fullName>
    <active>true</active>
    <description>Closed Details required when a Lead is Closed</description>
    <errorConditionFormula>AND
(! $Setup.OCS_Config_Settings_CSH__c.Validation_Rules_Disabled__c, 
(AND
(
    ISPICKVAL(Status, &apos;Closed&apos;),
    ISBLANK(Closure_Details__c)
))
)</errorConditionFormula>
    <errorDisplayField>Closure_Details__c</errorDisplayField>
    <errorMessage>Please provide further details for closure</errorMessage>
</ValidationRule>
