<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Negative_Prices</fullName>
    <active>true</active>
    <description>Prevent negative price</description>
    <errorConditionFormula>AND( $Setup.OCS_Config_Settings_CSH__c.Validation_Rules_Disabled__c = FALSE,
				 UnitPrice &lt; 0
				)</errorConditionFormula>
    <errorMessage>Sales Price cannot be a negative value</errorMessage>
</ValidationRule>
