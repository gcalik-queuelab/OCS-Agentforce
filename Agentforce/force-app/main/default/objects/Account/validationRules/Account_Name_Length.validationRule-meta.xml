<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_Name_Length</fullName>
    <active>false</active>
    <description>AD-159 - validation to ensure the Account Name is recorded correctly</description>
    <errorConditionFormula>AND(!$Setup.OCS_Config_Settings_CSH__c.Validation_Rules_Disabled__c,
LEN( Name ) &gt; 100)</errorConditionFormula>
    <errorDisplayField>Count_of_Active_Contacts__c</errorDisplayField>
    <errorMessage>The Account Name should not exceed 100 characters</errorMessage>
</ValidationRule>
