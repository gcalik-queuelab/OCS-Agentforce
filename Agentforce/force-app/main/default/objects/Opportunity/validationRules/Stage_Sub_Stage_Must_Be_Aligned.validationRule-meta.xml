<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Stage_Sub_Stage_Must_Be_Aligned</fullName>
    <active>true</active>
    <description>For non-Target Record Types Stage and Sub Stage must always be aligned.</description>
    <errorConditionFormula>AND(
				$Setup.OCS_Config_Settings_CSH__c.Validation_Rules_Disabled__c = FALSE,
    RecordType.DeveloperName != &apos;Target&apos;,				
				LEFT(TEXT(StageName),1) != LEFT(TEXT(Sub_Stage__c),1)
				)</errorConditionFormula>
    <errorDisplayField>Sub_Stage__c</errorDisplayField>
    <errorMessage>Please ensure that Stage and Sub Stage are aligned correctly.</errorMessage>
</ValidationRule>
