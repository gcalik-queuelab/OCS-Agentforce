<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Days_Since_Award_Date__c</fullName>
    <description>Calculates the number of days since the Award Date - 0 if the Award Date has not yet passed</description>
    <externalId>false</externalId>
    <formula>IF(TODAY() &lt; CloseDate, 0, TODAY() - CloseDate)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Days Since Award Date</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
