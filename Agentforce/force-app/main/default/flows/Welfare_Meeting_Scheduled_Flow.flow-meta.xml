    <description>Scheduled Flow to send reminder notifications and automatically close incomplete Welfare Meetings.</description>
    <environments>Default</environments>
    <formulas>
        <description>Used in creation of Case Comments/Next Action Date. Add 35 Days to the Date/Time of the Welfare Meeting.</description>
        <name>f_Automatic_Closure_Date</name>
        <dataType>Date</dataType>
        <expression>DATEVALUE({!$Record.Date_Time__c}) + 35</expression>
    </formulas>
    <formulas>
        <name>f_Days_Passed_Calc</name>
        <dataType>Number</dataType>
        <expression>IF(DATEVALUE({!$Record.Date_Time__c}) &lt;= TODAY(),
TODAY() - DATEVALUE({!$Record.Date_Time__c}),
0
)</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <description>7 Days in the future from today.</description>
        <name>f_Today_Plus_7</name>
        <dataType>Date</dataType>
        <expression>{!$Flow.CurrentDate} + 7</expression>
    </formulas>
