    <decisions>
        <description>Based on Profile/Country which Record Type(s) is the User eligible for?

This decision does not directly contain elements/actions for any of the outcomes but the outcome followed in the interview for the user is referenced in the decision element below and drives which Permission Sets are assigned/Removed.</description>
        <name>Eligibility_Decision</name>
        <label>Eligibility Decision</label>
        <locationX>490</locationX>
        <locationY>1334</locationY>
        <defaultConnector>
            <targetReference>Required_Assignment_Action</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Other - Skip</defaultConnectorLabel>
        <rules>
            <name>Both_Full_Lite_Eligible_Outcome</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>vIn_User.Profile.Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>System Administrator</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vIn_User.Profile.Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Regional Delegated Administrator</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vIn_User.Profile.Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Global Delegated Administrator</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vIn_User.Region__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>APAC</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Required_Assignment_Action</targetReference>
            </connector>
            <label>Eligible Both Full + Lite</label>
        </rules>
        <rules>
            <name>Lite_Opp_Eligible_Outcome</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>vIn_User.Country</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>United Kingdom</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vIn_User.Country</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Ireland</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Required_Assignment_Action</targetReference>
            </connector>
            <label>Eligible Lite Opp</label>
        </rules>
        <rules>
            <name>Eligible_Full_Opp_Outcome</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>vIn_User.Country</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>United Kingdom</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vIn_User.Country</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Ireland</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Required_Assignment_Action</targetReference>
            </connector>
            <label>Eligible Full Opp</label>
        </rules>
