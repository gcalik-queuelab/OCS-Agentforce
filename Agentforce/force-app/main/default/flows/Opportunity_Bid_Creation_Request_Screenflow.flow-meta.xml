    <decisions>
        <description>Is there already an active Opp Approval in Progress?</description>
        <name>Opp_Approval_Already_in_Progress_Decision</name>
        <label>Opportunity Approval Already in Progress?</label>
        <locationX>611</locationX>
        <locationY>242</locationY>
        <defaultConnector>
            <targetReference>Opp_Lines_Added_Decision</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No - Continue</defaultConnectorLabel>
        <rules>
            <name>Yes_Approval_In_Progress</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>recordId.Bid_Approval_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Pending Approval</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>recordId.RFP_Compliance_Review_Approval_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Submitted</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Approval_Already_in_Progress_Toast</targetReference>
            </connector>
            <label>Yes - Approval In Progress</label>
        </rules>
    </decisions>
