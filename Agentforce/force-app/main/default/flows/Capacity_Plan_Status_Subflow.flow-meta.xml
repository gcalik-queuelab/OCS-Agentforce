    <decisions>
        <description>Process Start Date passed and Opp not Closed.</description>
        <name>Active_Decision</name>
        <label>Active Decision</label>
        <locationX>545</locationX>
        <locationY>242</locationY>
        <defaultConnector>
            <targetReference>Imminent_Decision</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No - Continue</defaultConnectorLabel>
        <rules>
            <name>Yes_Active_Outcome</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>recordId.Opportunity__r.IsClosed</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>recordId.Opportunity__r.Bid_Start_Date__c</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>$Flow.CurrentDate</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>recordId.Opportunity__r.Bid_Start_Date__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Status_Active</targetReference>
            </connector>
            <label>Yes - Active</label>
        </rules>
    </decisions>
    <decisions>
        <description>Future Status where Bid Start Date is more than 90 Days in future.</description>
        <name>Future_Decision</name>
        <label>Future Decision</label>
        <locationX>974</locationX>
        <locationY>458</locationY>
        <defaultConnectorLabel>No - Stop</defaultConnectorLabel>
        <rules>
            <name>Yes_Future_Outcome</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>recordId.Opportunity__r.Bid_Start_Date__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <elementReference>f_90Days_After_Today</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Status_Future</targetReference>
            </connector>
            <label>Yes - Future</label>
        </rules>
    </decisions>
    <decisions>
        <description>90 days before Process Start Date and NOT currently Active. Do not allow Capacity Plan to move from Active to Imminent automatically.</description>
        <name>Imminent_Decision</name>
        <label>Imminent Decision</label>
        <locationX>776</locationX>
        <locationY>350</locationY>
        <defaultConnector>
            <targetReference>Future_Decision</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No - Continue</defaultConnectorLabel>
        <rules>
            <name>Yes_Imminent_Outcome</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>recordId.Opportunity__r.Bid_Start_Date__c</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>f_90Days_After_Today</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>recordId.Planning_Status__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Active</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Status_Imminent</targetReference>
            </connector>
            <label>Yes - Imminent</label>
        </rules>
    </decisions>
    <decisions>
        <description>Is the Opp Closed? If yes then set Capacity Plan closed. Otherwise continue.</description>
        <name>Opp_Closed</name>
        <label>Opp Closed?</label>
        <locationX>297</locationX>
        <locationY>134</locationY>
        <defaultConnector>
            <targetReference>Active_Decision</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No - Continue</defaultConnectorLabel>
        <rules>
            <name>Yes_Closed</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>recordId.Opportunity__r.IsClosed</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Status_Complete</targetReference>
            </connector>
            <label>Yes - Closed</label>
        </rules>
    </decisions>
    <decisions>
        <description>Is the correct status already set or is an update required?</description>
        <name>Update_Required_Decision</name>
        <label>Update Required?</label>
        <locationX>297</locationX>
        <locationY>1010</locationY>
        <defaultConnectorLabel>No - Stop</defaultConnectorLabel>
        <rules>
            <name>Yes_Update_Status_Outcome</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>recordId.Planning_Status__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>v_Status</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Record_Status</targetReference>
            </connector>
            <label>Yes - Update Status</label>
        </rules>
    </decisions>
    <description>Subflow called by Capacity Plan: After Create and Update flow and scheduled flow to set Capacity Plan Status</description>
