    </formulas>
    <formulas>
        <description>Account Name/Short Name - Reference</description>
        <name>f_Operational_Opportunity_Name</name>
        <dataType>String</dataType>
        <expression>LEFT(
/* Use Account Known As Name if available, otherwise full Account Name */
IF(ISBLANK({!$Record.Account__r.Known_As__c}),{!$Record.Account__r.Name},{!$Record.Account__r.Known_As__c})
&amp;
/* If Service Summary is not blank then include it. Use Substitute function to remove Line Break from Service Summary text area and replace with &apos; + &apos; to join separate lines together */
IF(ISBLANK({!$Record.Service_Summary_Text__c}),NULL,&quot; - &quot; &amp; SUBSTITUTE( {!$Record.Service_Summary_Text__c} ,SUBSTITUTE({!t_LineBreak}, &quot;-&quot;, &quot;&quot;),&quot; + &quot;))
&amp;
/* Include Reference if it is not blank and does not match Service Summary */
IF(ISBLANK({!$Record.Reference__c}),NULL,
IF({!$Record.Reference__c} = SUBSTITUTE( {!$Record.Service_Summary_Text__c} ,SUBSTITUTE({!t_LineBreak}, &quot;-&quot;, &quot;&quot;),&quot; + &quot;)
,NULL,&quot; - &quot; &amp; {!$Record.Reference__c}))
,80)
/* Limit to 80 Chars for field char length limit */</expression>
    </formulas>
