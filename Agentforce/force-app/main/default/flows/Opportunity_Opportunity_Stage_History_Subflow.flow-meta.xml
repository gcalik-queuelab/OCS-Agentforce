    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <description>Ensure the Opportunity is not moving to Closed or Future Opportunity. Only create a new History record if it is not.</description>
        <name>Eligibility_Check_Create</name>
        <label>Eligibility Check (Create)</label>
        <locationX>314</locationX>
        <locationY>782</locationY>
        <defaultConnectorLabel>No - Skip Creation</defaultConnectorLabel>
        <rules>
            <name>Yes_New_Sub_Stage_Eligible_Continue</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>vIn_Current_Stage</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>5. Closed Withdrawn</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vIn_Current_Stage</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>6. Closed Lost</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vIn_Current_Stage</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>7. Closed Won</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vIn_Current_Sub_Stage</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>2.1 Future Opportunity</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_New_History_Record</targetReference>
            </connector>
            <label>Yes - Continue</label>
        </rules>
    </decisions>
    <decisions>
        <description>Before updating Open History record check that the Prior Stage was not Closed or Future Opportunity as in this instance no open History record will be available for update. Also check Prior Stage is populated (Opportunity is not new).</description>
        <name>Eligibility_Check_Update_Decision</name>
        <label>Eligibility Check (Update)</label>
        <locationX>314</locationX>
        <locationY>242</locationY>
        <defaultConnector>
            <targetReference>Eligibility_Check_Create</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No - Skip Update</defaultConnectorLabel>
        <rules>
            <name>Yes_Update_Open_History_Record_Outcome</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>vIn_Prior_Stage</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>5. Closed Withdrawn</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vIn_Prior_Stage</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>6. Closed Lost</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vIn_Prior_Stage</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>7. Closed Won</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vIn_Prior_Sub_Stage</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>2.1 Future Opportunity</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vIn_Prior_Stage</leftValueReference>
                <operator>NotEqualTo</operator>
            </conditions>
            <connector>
                <targetReference>Update_Open_History_Record</targetReference>
            </connector>
            <label>Yes - Continue</label>
        </rules>
    </decisions>
    <decisions>
        <description>Final check that the Sub Stage has been changed before continuing with the rest of the Subflow. Theoretically not required due to checks in Opp After Save flow but good as a fall back.</description>
        <name>Sub_Stage_Changed_Decision</name>
        <label>Sub Stage Changed?</label>
        <locationX>578</locationX>
        <locationY>134</locationY>
        <defaultConnectorLabel>No - Stop</defaultConnectorLabel>
        <rules>
            <name>Yes_Sub_Stage_Changed_Outcome</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>vIn_Current_Sub_Stage</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>vIn_Prior_Sub_Stage</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Eligibility_Check_Update_Decision</targetReference>
            </connector>
            <label>Yes - Continue</label>
        </rules>
    </decisions>
