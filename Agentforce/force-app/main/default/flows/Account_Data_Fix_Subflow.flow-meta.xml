    <decisions>
        <description>If Data changes were made to the Account record in the Flow then update the Account accordingly.</description>
        <name>Account_Update_Required_Decision</name>
        <label>Account Update Required</label>
        <locationX>314</locationX>
        <locationY>1292</locationY>
        <defaultConnectorLabel>No - Skip</defaultConnectorLabel>
        <rules>
            <name>Yes_Update_Account_Outcome</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Set_Billing_Country_Info</leftValueReference>
                <operator>WasVisited</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Set_Active_Status_Open_Opps</leftValueReference>
                <operator>WasVisited</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Sector_Detail_Missing</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Account</targetReference>
            </connector>
            <label>Yes - Update Account</label>
        </rules>
    </decisions>
    <decisions>
        <description>If the Account has Active Status Blank/No Longer Trading but # Open Opps &gt; 0 then set Active Status to Active.</description>
        <name>Active_Status</name>
        <label>Active Status</label>
        <locationX>314</locationX>
        <locationY>434</locationY>
        <defaultConnector>
            <targetReference>Sector_Detail</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Active Status Populated</defaultConnectorLabel>
        <rules>
            <name>Active_With_Open_Opps</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>vInOut_Account.Active_Status__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Active</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>vInOut_Account.Sum_of_Open_Opportunities__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <numberValue>0.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Active_Status_Open_Opps</targetReference>
            </connector>
            <label>Active With Open Opps</label>
        </rules>
    </decisions>
