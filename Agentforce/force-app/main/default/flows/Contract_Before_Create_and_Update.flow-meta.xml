    <formulas>
        <description>Account Short Name (if populated, otherwise Account Name) - Owner Business Unit - Reference
Limit Name to 255 chars to adhere to field character limits.</description>
        <name>f_ContractName</name>
        <dataType>String</dataType>
        <expression>LEFT(
/* Account Known As Name if provided, otherwise use Account Name */
IF(ISBLANK({!$Record.Account__r.Known_As__c}),{!$Record.Account__r.Name},{!$Record.Account__r.Known_As__c}) &amp;
/* Owner BU*/
IF(ISBLANK(TEXT({!$Record.Owner:User.Business_Unit__c})),NULL,&quot; - &quot; &amp; TEXT({!$Record.Owner:User.Business_Unit__c})) &amp;

/* If Reference = Owner BU then do not include Reference in Name*/
IF(TEXT({!$Record.Owner:User.Business_Unit__c}) = {!$Record.Reference__c}, NULL,
IF(ISBLANK({!$Record.Reference__c}),NULL,&quot; - &quot; &amp; {!$Record.Reference__c})), 255)</expression>
    </formulas>
