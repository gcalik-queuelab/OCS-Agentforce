    <description>update account.owner_region new field</description>
    <environments>Default</environments>
    <formulas>
        <name>f_isNew</name>
        <dataType>Boolean</dataType>
        <expression>ISNEW()</expression>
    </formulas>
    <formulas>
        <description>Known As name (if populated), if not populated use Account Name. Append Site Address Street.</description>
        <name>f_Site_Name</name>
        <dataType>String</dataType>
        <expression>LEFT(
/* Use Known As Account Name if available, otherwise use full Account Name*/
IF(ISBLANK({!$Record.Account__r.Known_As__c}),{!$Record.Account__r.Name},{!$Record.Account__r.Known_As__c}) &amp;
/* Append Street Address to end of formula if populated*/
IF(ISBLANK({!$Record.Site_Address__Street__s}),NULL,&quot; - &quot; &amp; {!$Record.Site_Address__Street__s})
,80)
/* Limit Name to 80 Chars */</expression>
    </formulas>
