        <locationX>314</locationX>
        <locationY>134</locationY>
        <defaultConnector>
            <targetReference>Appeal_Manager_Info_Input</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>OK - Continue</defaultConnectorLabel>
        <rules>
            <name>Deadline_Passed_Block_Creation_Outcome</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>recordId.Days_Since_Closure__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <numberValue>28.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Deadline_Passed_Screen</targetReference>
            </connector>
            <label>Deadline Passed - Block Creation</label>
        </rules>
    </decisions>
