<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <name>Add_to_Update_Collection</name>
        <label>Add to Update Collection</label>
        <locationX>446</locationX>
        <locationY>974</locationY>
        <assignmentItems>
            <assignToReference>v_Influence_Update_Collection</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>Loop_Influence_Records</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Loop_Influence_Records</targetReference>
        </connector>
    </assignments>
    <assignments>
        <description>Add recordId var to the collection var for all related Influence records so that it is included in Influence % calculations. Not included for Influence record deletions to exclude from calculations.</description>
        <name>Add_Triggering_Record</name>
        <label>Include Triggering Record</label>
        <locationX>50</locationX>
        <locationY>350</locationY>
        <assignmentItems>
            <assignToReference>Get_Influence_Records</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>recordId</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Count_Influence_Records</targetReference>
        </connector>
    </assignments>
    <assignments>
        <description>Count the Influence records to be able to calculate a % Influence for each one based on even distribution (completed by Formula).</description>
        <name>Count_Influence_Records</name>
        <label>Count Influence Records</label>
        <locationX>182</locationX>
        <locationY>542</locationY>
        <assignmentItems>
            <assignToReference>v_Count_Influence_Records</assignToReference>
            <operator>AssignCount</operator>
            <value>
                <elementReference>Get_Influence_Records</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Continue_Decision</targetReference>
        </connector>
    </assignments>
    <assignments>
        <name>Set_Influence_Percent</name>
        <label>Set Influence %</label>
        <locationX>446</locationX>
        <locationY>866</locationY>
        <assignmentItems>
            <assignToReference>Loop_Influence_Records.Influence</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>f_Influence_Percent</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Add_to_Update_Collection</targetReference>
        </connector>
    </assignments>
    <decisions>
        <description>If the Influence Record is being deleted and no other Influence records exist then end the Flow as no further action is required. Only continue if action is required Create/Update or Delete where other records exist.</description>
        <name>Continue_Decision</name>
        <label>Continue Decision</label>
        <locationX>182</locationX>
        <locationY>650</locationY>
        <defaultConnector>
            <targetReference>Loop_Influence_Records</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Yes - Continue</defaultConnectorLabel>
        <rules>
            <name>No_Stop_Outcome</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>v_InfluenceRecord_Deletion</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>v_Count_Influence_Records</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <numberValue>0.0</numberValue>
                </rightValue>
            </conditions>
            <label>No - Stop</label>
        </rules>
    </decisions>
    <decisions>
        <description>If the Influence Record is being deleted then do not include the triggering record in Influence % Calculations. If the Influence record is not being deleted then do include triggering record in Influence % Calculations.</description>
        <name>Include_Triggering_Record_Decision</name>
        <label>Include Triggering Record?</label>
        <locationX>182</locationX>
        <locationY>242</locationY>
        <defaultConnector>
            <targetReference>Count_Influence_Records</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No - Do Not Include</defaultConnectorLabel>
        <rules>
            <name>Yes_Add_Triggering_Record</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>v_InfluenceRecord_Deletion</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Add_Triggering_Record</targetReference>
            </connector>
            <label>Yes - Add Triggering Record</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>f_Influence_Percent</name>
        <dataType>Number</dataType>
        <expression>100/{!v_Count_Influence_Records}</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>Campaign Influence: Calculate Influence Percent Subflow {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Campaign Influence: Calculate Influence Percent Subflow</label>
    <loops>
        <name>Loop_Influence_Records</name>
        <label>Loop Influence Records</label>
        <locationX>358</locationX>
        <locationY>758</locationY>
        <collectionReference>Get_Influence_Records</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>Set_Influence_Percent</targetReference>
        </nextValueConnector>
        <noMoreValuesConnector>
            <targetReference>Update_Influence_Records</targetReference>
        </noMoreValuesConnector>
    </loops>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <description>Get Campaign Influence Records related to this Influence Record (while excluding this record itself). It this triggering record also needs to be included in calculations it will be included in a later step.</description>
        <name>Get_Influence_Records</name>
        <label>Get Influence Records</label>
        <locationX>182</locationX>
        <locationY>134</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Include_Triggering_Record_Decision</targetReference>
        </connector>
        <faultConnector>
            <isGoTo>true</isGoTo>
            <targetReference>Log_Error</targetReference>
        </faultConnector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>OpportunityId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>recordId.OpportunityId</elementReference>
            </value>
        </filters>
        <filters>
            <field>ModelId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>recordId.ModelId</elementReference>
            </value>
        </filters>
        <filters>
            <field>Id</field>
            <operator>NotEqualTo</operator>
            <value>
                <elementReference>recordId.Id</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>false</getFirstRecordOnly>
        <object>CampaignInfluence</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordUpdates>
        <name>Update_Influence_Records</name>
        <label>Update Influence Records</label>
        <locationX>358</locationX>
        <locationY>1166</locationY>
        <faultConnector>
            <targetReference>Log_Error</targetReference>
        </faultConnector>
        <inputReference>v_Influence_Update_Collection</inputReference>
    </recordUpdates>
    <start>
        <locationX>56</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Influence_Records</targetReference>
        </connector>
    </start>
    <status>Active</status>
    <subflows>
        <name>Log_Error</name>
        <label>Log Error</label>
        <locationX>622</locationX>
        <locationY>1274</locationY>
        <flowName>Utility_Error_Log_Creation</flowName>
        <inputAssignments>
            <name>Level</name>
            <value>
                <stringValue>Error</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>Messages</name>
            <value>
                <elementReference>$Flow.FaultMessage</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>OriginName</name>
            <value>
                <stringValue>Campaign Influence: Calculate Influence Percent Subflow</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>RecordId</name>
            <value>
                <elementReference>recordId.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>Type</name>
            <value>
                <stringValue>Flow</stringValue>
            </value>
        </inputAssignments>
    </subflows>
    <variables>
        <name>recordId</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
        <objectType>CampaignInfluence</objectType>
    </variables>
    <variables>
        <description>Count of Campaign Influence records included in the calculation.</description>
        <name>v_Count_Influence_Records</name>
        <dataType>Number</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <scale>0</scale>
        <value>
            <numberValue>0.0</numberValue>
        </value>
    </variables>
    <variables>
        <name>v_Influence_Update_Collection</name>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <objectType>CampaignInfluence</objectType>
    </variables>
    <variables>
        <description>Ticked if Campaign Influence is being deleted and so the record being deleted should be excluded from Influence % Calculations.</description>
        <name>v_InfluenceRecord_Deletion</name>
        <dataType>Boolean</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
        <value>
            <booleanValue>false</booleanValue>
        </value>
    </variables>
</Flow>
